# MongoDB Configuration
MONGO_USER=admin
MONGO_PASS=password
MONGO_HOST=db
MONGO_PORT=27017
MONGO_DB=cat_health

# Flask Configuration
FLASK_SECRET_KEY=your-secret-key-for-sessions-change-in-production
FLASK_DEBUG=False

# JWT Configuration
# If not set, JWT_SECRET_KEY defaults to FLASK_SECRET_KEY
# JWT_SECRET_KEY=your-jwt-secret-key

# Admin User Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=your_bcrypt_password_hash

# To generate a password hash, run:
# python -c "import bcrypt; print(bcrypt.hashpw('your_password'.encode(), bcrypt.gensalt()).decode())"

# Logging Configuration (used for both Flask app and Gunicorn)
# LOG_LEVEL=INFO

# Rate Limiting Configuration
# If not set, RATELIMIT_STORAGE_URI defaults to MongoDB URI
# RATELIMIT_STORAGE_URI=mongodb://admin:password@db:27017/cat_health?authSource=admin

# Gunicorn Configuration (optional)
# GUNICORN_WORKERS=2
